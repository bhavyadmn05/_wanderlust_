<% layout("/layout/boilerplate") %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card listing-card fade-in">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-circle fa-3x text-primary mb-3"></i>
                        <h2 class="card-title">Welcome Back</h2>
                        <p class="text-muted">Sign in to your Wanderlust account</p>
                    </div>
                    
                    <form action="/login" method="POST" class="needs-validation" novalidate>
                        <div class="mb-4">
                            <label for="username" class="form-label">Username</label>
                            <input name="username" id="username" type="text" class="form-control" placeholder="Enter your username" required>
                            <div class="invalid-feedback">Please provide a username</div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="password" class="form-label">Password</label>
                            <input name="password" id="password" type="password" class="form-control" placeholder="Enter your password" required>
                            <div class="invalid-feedback">Please provide a password</div>
                        </div>
                        
                        <button class="btn btn-primary-custom w-100 mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Sign In
                        </button>
                        
                        <div class="text-center">
                            <p class="text-muted">Don't have an account? <a href="/signup" class="text-decoration-none">Sign up here</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
